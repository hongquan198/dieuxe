@model Quanlixe.Models.ChucVu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /*.container {
        max-width: 600px;
        margin: 20px auto;
        font-family: Arial, sans-serif;
    }*/

    h4 {
        font-size: 1.8em;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            font-size: 1em;
            display: block;
            margin-bottom: 5px;
        }

    .form-control {
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #4c8bf5;
            box-shadow: 0 0 0 2px rgba(76, 139, 245, 0.3);
        }

    .btn-success {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        margin-right: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: red;
        font-size: 0.9em;
    }

    .text-right {
        text-align: right;
    }

    .abc {
        margin-top: 20px;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-start;
 /*       padding-top: 1rem;*/
    }

        .form-actions .btn {
           
            border-radius: 0.5rem;
        }
</style>

<div class="container">
    <h4 class="mt-3">Thêm chức vụ</h4>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="ChucVuID">Chức vụ ID</label>
            @Html.EditorFor(model => model.ChucVuID, new { htmlAttributes = new { @class = "form-control", @id = "ChucVuID" } })
            @Html.ValidationMessageFor(model => model.ChucVuID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="TenChucVu">Tên chức vụ</label>
            @Html.EditorFor(model => model.TenChucVu, new { htmlAttributes = new { @class = "form-control", @id = "TenChucVu" } })
            @Html.ValidationMessageFor(model => model.TenChucVu, "", new { @class = "text-danger" })
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success btn-sm">Thêm</button>
            <a href="@Url.Action("Index")" class="btn btn-primary btn-sm">Quay lại</a>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
