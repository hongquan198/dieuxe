@model Quanlixe.Models.ChucVu

@{
    ViewBag.Title = "Sửa chức vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Đặt các kiểu CSS chung cho toàn bộ trang */
    .form-control, .btn {
        border-radius: .5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-custom {
        padding: 12px 25px;
        font-size: 1.125rem;
    }

    .abc {
        margin-top: 20px;
        text-align: center;
    }

    .card {
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        border-radius: 1rem;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
        background-color: #f1f1f1;
        border-radius: 1rem 1rem 0 0;
        padding: 15px;
    }

    .card-body {
        padding: 30px;
    }

        .card-body .form-control {
            height: 45px;
            font-size: 1rem;
        }

    .btn-primary, .btn-success {
        font-size: 1.125rem;
    }

    .btn:hover {
        cursor: pointer;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <!-- Card container cho toàn bộ form -->
        <div class="card">
            <div class="card-header">
                Sửa chức vụ
            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.ChucVuID)

                <!-- Tên chức vụ -->
                <div class="form-group">
                    <label for="TenChucVu">Tên chức vụ</label>
                    @Html.EditorFor(model => model.TenChucVu, new { htmlAttributes = new { @class = "form-control", @id = "TenChucVu" } })
                    @Html.ValidationMessageFor(model => model.TenChucVu, "", new { @class = "text-danger" })
                </div>

                <!-- Nút lưu -->
                <div class="form-group d-flex justify-content-center align-items-center">
                    <button type="submit" class="btn btn-success mr-3 btn-sm fs-6">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary btn-sm fs-6" })
                </div>
            </div>
        </div>
    }

    <!-- Nút quay lại -->
    @*<div class="abc">
            @Html.ActionLink("Quay lại", "Index", new { @class = "btn btn-primary btn-custom" })
        </div>*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
