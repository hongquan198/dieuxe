@model Quanlixe.Models.Account

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Thông tin người dùng</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        .card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .card h2 {
                margin-top: 0;
                color: #333;
            }

            .card p {
                font-size: 16px;
                color: #666;
                margin: 10px 0;
            }

            .card .info {
                display: flex;
                flex-direction: column;
                width: 100%;
                max-width: 500px;
            }

                .card .info div {
                    margin-bottom: 10px;
                }

                .card .info label {
                    font-weight: bold;
                    color: #333;
                }

                .card .info span {
                    font-size: 16px;
                    color: #666;
                }

        .btn-logout {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
        }

            .btn-logout:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <h2>Thông tin người dùng</h2>
            <div class="info">
                <div>
                    <label>Email:</label>
                    <span>@Model.Email</span>
                </div>
                <div>
                    <label>Tên:</label>
                    <span>@Model.User</span>
                </div>
                <div>
                    <label>Sđt:</label>
                    <span>@Model.Sdt</span>
                </div>
                
            </div>
            <a href="@Url.Action("Suathongtinnguoidung", "Home" ,new { user = Model.User})" class="btn-logout">Thay đổi thông tin người dùng</a>
        </div>
    </div>
</body>
</html>