@model Quanlixe.Models.Xe

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">
    <!-- Tiêu đề -->
    <div class="text-center mb-4">
        <h3 class="text-danger font-weight-bold">Xác nhận xóa xe này?</h3>
        <p class="text-muted">Bạn không thể khôi phục lại thông tin sau khi xóa.</p>
    </div>

    <!-- Thông tin xe - Bảng thông tin trong card đẹp mắt -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-light rounded-3">
                <div class="card-header text-center bg-light">
                    <h5 class="mb-0">Thông tin xe</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5 font-weight-bold">Tên biển kiểm soát:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.TenBienKiemSoat)</dd>

                        <dt class="col-sm-5 font-weight-bold">Loại xe:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.Xe1)</dd>

                        <dt class="col-sm-5 font-weight-bold">Định mức trên 100km:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.DinhMuc100km)</dd>

                        <dt class="col-sm-5 font-weight-bold">Loại nhiên liệu:</dt>
                        <dd class="col-sm-7">@Html.DisplayFor(model => model.LoaiNhienLieu)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Các nút hành động -->
    <div class="d-flex justify-content-center mt-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Nút Xóa -->
            <button type="submit" class="btn btn-danger btn-sm mr-3">
                <i class="bi bi-trash"></i> Xóa
            </button>
        }

        <!-- Nút Quay lại -->
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
