@model Quanlixe.Models.Xe

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Tiêu đề -->
    <h4 class="text-center mb-4">Thông tin xe</h4>
    <hr />

    <!-- Thông tin xe - sử dụng bảng (table) để bố cục đẹp hơn -->
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th scope="row" class="text-nowrap">Tên biển kiểm soát</th>
                <td>@Html.DisplayFor(model => model.TenBienKiemSoat)</td>
            </tr>
            <tr>
                <th scope="row" class="text-nowrap">Loại xe</th>
                <td>@Html.DisplayFor(model => model.Xe1)</td>
            </tr>
            <tr>
                <th scope="row" class="text-nowrap">Định mức trên 100km</th>
                <td>@Html.DisplayFor(model => model.DinhMuc100km)</td>
            </tr>
            <tr>
                <th scope="row" class="text-nowrap">Loại nhiên liệu</th>
                <td>@Html.DisplayFor(model => model.LoaiNhienLieu)</td>
            </tr>
        </tbody>
    </table>

    <!-- Các nút hành động (Sửa và Quay lại) -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Edit", new { id = Model.BienKiemSoatID })" class="btn btn-success btn-sm mr-3">
            <i class="bi bi-pencil"></i> Sửa
        </a>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
