@model IEnumerable<Quanlixe.Models.Xe>

@{
    ViewBag.Title = "Danh Sách Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Thanh công cụ -->
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3 mt-3"><i class="bi bi-plus-circle"></i> Thêm mới</a>
</p>

<!-- Bảng xe -->
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>STT</th>
            <th>Tên biển kiểm soát</th>
            <th>Tên xe</th>
            <th>Định mức trên 100km</th>
            <th>Loại nhiên liệu</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BienKiemSoatID)</td>
                <td>@Html.DisplayFor(modelItem => item.TenBienKiemSoat)</td>
                <td>@Html.DisplayFor(modelItem => item.Xe1)</td>
                <td>@Html.DisplayFor(modelItem => item.DinhMuc100km)</td>
                <td>@Html.DisplayFor(modelItem => item.LoaiNhienLieu)</td>
                <td>
                    <!-- Nút chức năng -->
                    <a href="@Url.Action("Edit", new { id = item.BienKiemSoatID })" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a> 
                    <a href="@Url.Action("Details", new { id = item.BienKiemSoatID })" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Xem
                    </a> 
                    <a href="@Url.Action("Delete", new { id = item.BienKiemSoatID })" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

