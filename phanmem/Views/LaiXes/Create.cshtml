@model Quanlixe.Models.LaiXe

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title">Thông tin lái xe</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.HoTenLaiXe, "Họ tên", htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HoTenLaiXe, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên lái xe" } })
                        @Html.ValidationMessageFor(model => model.HoTenLaiXe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="btn btn-success btn-sm">Tạo Mới</button>
                        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary btn-sm ml-2" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
