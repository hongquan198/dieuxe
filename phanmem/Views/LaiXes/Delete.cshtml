@model Quanlixe.Models.LaiXe

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    

    <h3>Bạn có chắc chắn muốn xóa không?</h3>
    <div class="p-3 mt-3">
        <div>
            <h4 class="mb-4">Thông tin lái xe</h4>
       
            <dl class="row">
                <dt class="col-sm-3">
                    Họ tên
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.HoTenLaiXe)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary ml-2" })
                </div>
            }
        </div>
    </div>
</div>
