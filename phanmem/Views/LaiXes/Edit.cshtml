@model Quanlixe.Models.LaiXe

@{
    ViewBag.Title = "Sửa Lái Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Thêm Bootstrap 5 CSS -->


<!-- Thêm CSS tùy chỉnh để làm đẹp giao diện -->
<style>
    /* Tạo một khung form nhỏ gọn, không dùng container */
    .form-wrapper {
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h4 {
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        height: 40px;
        font-size: 1rem;
        border-radius: 8px;
        box-shadow: none;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        width: 100%;
        padding: 12px;
        font-size: 1.2rem;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-link {
        font-size: 1rem;
        color: #007bff;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 0.9rem;
        font-weight: bold;
    }
</style>

<!-- Giao diện form sửa lái xe -->
<div class="form-wrapper mt-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Sửa thông tin lái xe</h4>
        <hr />

        <!-- Hiển thị lỗi nếu có -->
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LaiXeID)

        <!-- Trường Họ tên -->
        <div class="form-group">
            @Html.LabelFor(model => model.HoTenLaiXe, "Họ tên", htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.HoTenLaiXe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên lái xe" } })
            @Html.ValidationMessageFor(model => model.HoTenLaiXe, "", new { @class = "text-danger" })
        </div>

        <!-- Nút Lưu -->
        <div class="form-group">
            <input type="submit" value="Lưu" class="btn btn-primary" />
        </div>
    }

    <!-- Nút Quay lại -->
    <div class="text-center">
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-link" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- Thêm Bootstrap 5 JS -->

