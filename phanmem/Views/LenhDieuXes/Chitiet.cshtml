@model IEnumerable<Quanlixe.Models.LenhDieuXe>

@{
    ViewBag.Title = "Chi Tiết Lệnh Điều Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container {
        margin: 0 auto;
        max-width: 1200px;
    }
</style>

<div class="container my-4">


    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>STT</th>
                <th>Biển số xe</th>
                <th>Họ tên lái xe</th>
                <th>Họ tên người dùng xe</th>
                <th>Ngày đi</th>
                <th>Ngày về</th>
            </tr>
        </thead>
        <tbody>
            @{ int stt = 1; } <!-- Khai báo và khởi tạo biến STT -->
            @foreach (var item in Model)
            {
             
                <tr>
                    <td>
                        @stt <!-- Hiển thị số thứ tự -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Xe.TenBienKiemSoat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LaiXe.HoTenLaiXe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NguoiDungXe.HoTenNguoiDungXe)
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", item.NgayDi)
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", item.NgayVe)
                    </td>
                </tr>
                { stt++; } @*< !--Tăng biến STT sau mỗi lần lặp -->*@
            }
        </tbody>

    </table>
    <div class="text-center mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary">Quay lại</a>
    </div>
</div>


