@model Quanlixe.Models.Account

@{
    ViewBag.Title = "Xác Nhận Xóa Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center">Xác Nhận Xóa Tài Khoản</h3>
        </div>
        <div class="card-body">
            <h5 class="mb-4">Bạn có chắc chắn muốn xóa tài khoản này?</h5>

            <!-- Hiển thị thông tin tài khoản -->
            <dl class="row">
                <dt class="col-sm-4">Tên đăng nhập</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.User)</dd>
                <dt class="col-sm-4">Mật khẩu</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">Số điện thoài</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Sdt)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Role)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
            </dl>

            <!-- Các nút xác nhận -->
            <div class="form-actions text-center">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Xóa Tài Khoản
                    </button>
                    <a href="@Url.Action("Index", "Accounts")" class="btn btn-secondary btn-sm">
                        Quay Lại
                    </a>
                }
            </div>
        </div>
    </div>
</div>
